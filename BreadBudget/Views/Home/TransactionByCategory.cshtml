@model IEnumerable<BreadBudget.Models.Transaction>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/js/receipt.js" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Rent</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Transaction Type</th>
                <th scope="col">Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Note</th>
                <th scope="col">Receipt</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var receipt in Model)
            {
                <tr>
                    <td>@receipt.TransactionType</td>
                    <td>@receipt.Name</td>
                    <td>@receipt.Amount</td>
                    <td>@receipt.Note</td>
                    <td><a class="image-link" href="~/images/@receipt.Receipt">View Receipt</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
