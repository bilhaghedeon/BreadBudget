
@model BreadBudget.Models.TransactionForm


@{
    ViewData["Title"] = "Test";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</head>
<body>
    <div class="container h-100">
        <div class="panel panel-success">
            <div class="panel-heading text-center"><h4>Sign Up</h4></div>
            <div class="panel-body">
               

                <form class="p-a-1" asp-action="AddTransaction" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All"></div>
                    @foreach (var transaction in Enum.GetValues(typeof(TransactionForm.TransactionTypes)))
                    {
                        <label class="btn btn-outline-secondary m-5">
                            <input id="radiobtn" type="radio" asp-for="TransactionType" value="@transaction" />
                            @transaction
                        </label>
                    }
                    <div class="form-group">
                        <label asp-for="Name">Transaction Name:</label>
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount">Amount :</label>
                        <input class="form-control" asp-for="Amount" />
                    </div>
                    <div class="form-group">
                        <label>Select the category:</label>
                        <select class="form-control" asp-for="Category" asp-items="Html.GetEnumSelectList<BreadBudget.Models.TransactionForm.Categories>()">
                            <option selected="selected" value="">Choose an option</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note">Notes :</label>
                        <input class="form-control" asp-for="Note" />
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Upload</span>
                        </div>
                        <div class="custom-file">
                            <input asp-for="Receipt" type="file" class="custom-file-input" id="inputGroupFile01">
                            <label asp-for="Receipt"class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">
                            Add
                        </button>
                    </div>
                </form>


                @section Scripts{
                    <script type="text/javascript">
                        $(document).ready(function () {
                            console.log("Hello!")
                            $('.custom-file-input').on("change", function () {
                                var fileName = $(this).val().split("\\").pop();
                                $(this).next('.custom-file-label').html(fileName);
                               
                            });
                        });
                    </script>
                }


            </div>
        </div>
    </div>

</body>
</html>

