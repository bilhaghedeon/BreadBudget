@model NewsAPI.Models.ArticlesResult

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>News</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>

    <div class="container-fluid">


        <h1 class="display-4 text-center font-weight-bolder">The Daily Bread</h1>


        <div class="row justify-content-center">

            @foreach (var article in Model.Articles)
            {

                <div class="card text-left" style="width: 20rem; margin: 30px">
                    <img class="card-img-top" src="@article.UrlToImage" alt="image unavailable">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-title">Publisher: @article.Author</p>
                        <p>Date: @article.PublishedAt</p>
                        <p class="card-text">@article.Description</p>
                        <a href="@article.Url" class="btn btn-primary mt-auto">Read</a>
                    </div>
                </div>
            }
        </div>

    </div>

</body>
</html>
