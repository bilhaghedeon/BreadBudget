@model IEnumerable<BreadBudget.Models.Transaction>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/js/receipt.js"/>
    <title>Rent</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Transaction Type</th>
                <th scope="col">Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Note</th>
                <th scope="col">Receipt</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var receipt in Model)
            {
                <tr>
                    <th>@receipt.TransactionType</th>
                    <th>@receipt.Name</th>
                    <th>@receipt.Amount</th>
                    <th style="word-break: break-word;">@receipt.Note</th>
                    <th><a class="image-link" href="~/images/@receipt.Receipt">View Receipt</a></th>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
