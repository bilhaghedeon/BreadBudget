@model BreadBudget.Models.TransactionForm

@{
    ViewData["Title"] = "AddTransaction";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddTransaction</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-7"><img src="~/images/croissant.png"></div>
            <div class="col-5 p-4">
                <div class="panel panel-success">
                    <div class="panel-heading text-center display-4"><h4>Add A Transaction</h4></div>
                    <div class="panel-body">
                        <img id="receiptPicture"/>
                        <form class="p-a-1" asp-action="AddTransaction" enctype="multipart/form-data" method="post">
                            <div asp-validation-summary="All"></div>
                            <div class="btn-group container-fluid" data-toggle="buttons">

                                <label for="income" class="btn btn-secondary ">
                                    <input id="income" type="radio" asp-for="TransactionType" value="Income" />
                                    Income
                                </label>
                                <label for="expense" class="btn btn-secondary ">
                                    <input id="expense" type="radio" asp-for="TransactionType" value="Expense" />
                                    Expense
                                </label>

                            </div>
                                <div class="form-group">
                                    <label asp-for="Name">Transaction Name:</label>
                                    <input class="form-control" asp-for="Name" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Amount">Amount :</label>
                                    <input class="form-control" asp-for="Amount" />
                                </div>
                                <div class="form-group">
                                    <label>Select the category:</label>
                                    <select class="form-control" asp-for="Category" asp-items="Html.GetEnumSelectList<BreadBudget.Models.TransactionForm.Categories>()">
                                        <option selected="selected" value="">Choose an option</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Note">Notes :</label>
                                    <input class="form-control" asp-for="Note" />
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Receipt" class="col-sm-3 col-form-label">Receipt: </label>
                                    <div class="col-sm-9">
                                        <div class="custom-file">
                                            <input asp-for="Receipt" class="form-control custom-file-input">
                                            <label id="recieptLabel" class="custom-file-label">Choose Profile Picture...</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-primary" type="submit">
                                        Add
                                    </button>
                                </div>
                                @section Scripts{
                                    <script>
                                        $(document).ready(function () {
                                            console.log("Document Loaded");
                                            $(".custom-file-input").change(function () {
                                                var fileName = $(this).val().split("\\").pop();
                                                console.log(fileName);
                                                $(this).next(".custom-file-label").html("File Uploaded!");
                                                //https://stackoverflow.com/questions/4459379/preview-an-image-before-it-is-uploaded
                                                $("#receiptPicture").attr("src", URL.createObjectURL(event.target.files[0]));

                                            });
                                        });
                                    </script>
                                }
                        </form>
                        <p id="tester"></p>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
