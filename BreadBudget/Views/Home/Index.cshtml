@model  BreadBudget.Models.Account;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <form asp-action="Index" method="post"> 
                <h1 class="mb-5 text-center">Login</h1>
                <div asp-validation-summary="All"></div>
                <div class="form-group text-center">
                    <label asp-for="Email" class="text-left">Email</label>
                    <div class="text-center">
                        <input class="form-control" asp-for="Email" />
                    </div>
                </div>
                <div class="pb-3 form-group text-center">
                    <label asp-for="Password" class="text-left">Password</label>
                    <div class="text-center">
                        <input type="password" class="form-control" asp-for="Password"/>
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Login</button>
                    <a class="btn btn-primary" href="./Home/SignUp">Sign Up</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
