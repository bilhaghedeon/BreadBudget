@model  BreadBudget.Models.Account;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
                <div class="col-6 align-content-center h-100">
                    <div class="row">
                        <h1 class="display-4">Bread Budget</h1>
                        
                    </div>
                    <div class="row">
                        <h6>Get your Bread in Order</h6>
                    </div>
                    <div class="row">
                        <img class="img-fluid" id="loginImage"src="~/images/LoginImage.png" alt="">
                    </div>
                </div>
                <div class="col-6">
                    <form asp-action="LogIn" method="post">
                        <h1 class="mb-5 text-center display-4">Login</h1>
                        <div asp-validation-summary="All"></div>
                        <div class="form-group text-center">
                            <label asp-for="Email" class="text-left">Email</label>
                            <div class="text-center">
                                <input class="form-control" asp-for="Email" />
                            </div>
                        </div>
                        <div class="pb-3 form-group text-center">
                            <label asp-for="Password" class="text-left">Password</label>
                            <div class="text-center">
                                <input type="password" class="form-control" asp-for="Password" />
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-dark" type="submit">Login</button>
                            <a class="btn btn-outline-dark" href="./Home/SignUp">Sign Up</a>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</body>
</html>
